{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES6",
      "dom",
      "dom.iterable",
    ],
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["src/components/*"],
    },
		"typeRoots": [
			"./node_modules/@types",
			"./src/types/"
		],
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx" ]
}